{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript,typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
  "eslint.runtime": "node",
  "eslint.workingDirectories": [
    { "pattern": "apps/*/" },
    { "pattern": "packages/*/" },
    { "pattern": "tooling/*/" }
  ],
  "prettier.ignorePath": ".gitignore",
  "tailwindCSS.classFunctions": ["cva", "cx", "cn"],
  "tailwindCSS.experimental.configFile": "./tooling/tailwind/web.ts",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "zod/dist/types/index.d.ts", // Force auto-imports to v4
    "next/router.d.ts",
    "next/dist/client/router.d.ts"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#3df9d7",
    "activityBar.background": "#3df9d7",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#df64fa",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#3df9d7",
    "statusBar.background": "#0cf7cd",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#07c9a7",
    "statusBarItem.remoteBackground": "#0cf7cd",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#0cf7cd",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#0cf7cd99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.remoteColor": "#f4f857",
  "peacock.color": "#0cf7cd"
}
